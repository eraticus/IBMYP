<h1>Subject: <em><%= h @subject.name %></em></h1>

<p>
	<b>Description:</b>
	<%=h @subject.description %>
</p>

<div class="section">
	<strong>Criterions</strong>
	<table>
		<%for criterion in @subject.criterions%>
		<tr>
			<td><strong><%= criterion.category %>: </strong><%= criterion.title %></td>
			<td>
				<%= link_to("View", criterion_path(criterion))%> |
				<%= link_to("Edit", edit_subject_criterion_path(@subject, criterion))%> |
				<%= link_to "Delete", criterion, :confirm=>"Are you sure?", :method=>"delete" %>
			</td>
		</tr>
		<%end%>
	</table>
	<div class="navigation">
	<%= link_to("New Criterion", new_subject_criterion_path(@subject))%>
	</div>
</div>

<div class="section" id="courses">
	<strong>Courses</strong>
	<table>
		<%for course in @subject.courses%>
		<tr id="<%= dom_id course %>">
			<td><strong><%=course.name%></strong></td>
			<td>
				<%= link_to("View", subject_course_path(@subject, course))%> |
				<%= link_to("Edit", edit_subject_course_path(@subject, course))%> |
				<%= link_to "Delete", course, :confirm=>"Are you sure?", :method=>"delete" %>
			</td>
		</tr>
		<%end%>
	</table>
	<div class="navigation">
	<%= link_to("New Course", new_subject_course_path(@subject))%>
	</div>
</div>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %>
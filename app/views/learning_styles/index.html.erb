<h1>Listing learning_styles</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Intelligence</th>
    <th>Unit planner</th>
  </tr>

<% @learning_styles.each do |learning_style| %>
  <tr>
    <td><%=h learning_style.description %></td>
    <td><%=h learning_style.intelligence_id %></td>
    <td><%=h learning_style.unit_planner_id %></td>
    <td><%= link_to 'Show', learning_style %></td>
    <td><%= link_to 'Edit', edit_learning_style_path(learning_style) %></td>
    <td><%= link_to 'Destroy', learning_style, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New learning_style', new_learning_style_path %>
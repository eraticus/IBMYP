<h1>Editing Prior Knowledge</h1>

<% form_for(@unit_planner) do |f| %>
  <%= f.error_messages %>

<%=hidden_field_tag :anchor, "prior_knowledge"%>

  <p>
    <%= f.label :prior_knowledge %><br />
    <%= f.text_area :prior_knowledge %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', unit_planner_path(@unit_planner, :anchor=>"prior_knowledge") %>
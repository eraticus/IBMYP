<p>
  <b>Tag:</b>
  <%=h @standard.label %>
</p>

<p>
  <b>Title:</b>
  <%=h @standard.name %>
</p>

<p>
  <b>Description:</b>
  <%=h @standard.description %>
</p>

<div class="section">
	<div class="title">Indicators</div>
	<table>
		<%for indicator in @standard.indicators%>
		<tr>
			<td><strong><%= indicator.label %>: </strong><%= indicator.description %></td>
			<td>
				<%= link_to("Show", indicator)%> |
				<%= link_to("Edit", edit_indicator_path(indicator))%> |
				<%= link_to "Delete", indicator, :confirm=>"Are you sure?", :method=>"delete" %>
			</td>
		</tr>
		<%end%>
	</table>
	<div class="navigation">
		<%=link_to("New Indicator", new_standard_indicator_path(@standard))%>
	</div>
</div>



<%= link_to 'Edit', edit_course_standard_path(@course, @standard) %> |

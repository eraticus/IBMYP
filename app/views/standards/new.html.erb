<h1><%= "#{link_to( @subject.name, @subject, :anchor=>'standards')}->New Standard" %></h1>

<% form_for([@subject, @standard]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Cancel', subject_path(@subject, :anchor=>dom_id(@standard)) %>
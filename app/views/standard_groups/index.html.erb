<h1>Listing standard_groups</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Description</th>
  </tr>

<% @standard_groups.each do |standard_group| %>
  <tr>
    <td><%=h standard_group.tag %></td>
    <td><%=h standard_group.description %></td>
    <td><%= link_to 'Show', standard_group %></td>
    <td><%= link_to 'Edit', edit_standard_group_path(standard_group) %></td>
    <td><%= link_to 'Destroy', standard_group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New standard_group', new_standard_group_path %>
<h1>New Indicator</h1>
<%= "New Indicator for \"#{@standard.name}\" under the subject \"#{@standard.subject.name}\"" %>

<% form_for([@standard, @indicator]) do |f| %>
  <%= f.error_messages %>

  <span>
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </span>
  <span>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </span>

    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', @standard %>
<div style="font-weight:bold"><%= "#{@criterion.subject.name}->#{@criterion.title}->New objective" %></div>

<% form_for([@criterion, @objective]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :label %><br />
    <%= f.text_field :subcategory %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', criterion_path(@criterion) %>